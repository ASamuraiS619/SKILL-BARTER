<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>SKILL-BARTERへようこそ</h1>
    </div>
  </div>

  <div class="top-eye-catching">
  </div>

  <%# 新着スキルホルダー(ユーザー) %>
  <h2>新着スキルホルダー</h2>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <% follow = Follow.find_by(follower_id: current_user.id, followed_id: user.id) if user_signed_in? %>
        <%= render 'users/skill_holder_card', user: user, follow: follow%>
      </div>
    <% end %>
  </div>
  <div class="text-right">
    <%= link_to "もっと見る", users_path %>
  </div>


  <%# 新着案件 %>
  <h2>新着案件</h2>
  <div class="row">
    <div class="col-md-9">
      <% @propositions.each do |proposition| %>
        <div class="col-md-12 my-3">
          <% favorite = Favorite.find_by(user_id: current_user.id, proposition_id: proposition.id) if user_signed_in? %>
          <%= render 'propositions/proposition_card', proposition: proposition, favorite: favorite %>
        </div>
      <% end %>
      <div class="text-right">
        <%= link_to "もっと見る", propositions_path %>
      </div>
    </div>

    <%# 案件検索フォーム %>
    <div class="col-md-3">
      <%= render 'propositions/propositions_search_form', search: @search %>
    </div>
  </div>
</div>
